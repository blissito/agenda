{
  "$schema": "https://biomejs.dev/schemas/2.3.14/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": true,
    "includes": ["app/**", "scripts/**", "tests/**"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "css": {
    "linter": {
      "enabled": false
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedImports": "warn",
        "noUnusedVariables": "warn",
        "noUnusedFunctionParameters": "off",
        "useExhaustiveDependencies": "off",
        "useHookAtTopLevel": "off",
        "useJsxKeyInIterable": "warn",
        "noChildrenProp": "off",
        "noInvalidUseBeforeDeclaration": "off"
      },
      "suspicious": {
        "noExplicitAny": "off",
        "noArrayIndexKey": "off",
        "noImplicitAnyLet": "off",
        "noAssignInExpressions": "off",
        "useIterableCallbackReturn": "warn",
        "noShadowRestrictedNames": "warn"
      },
      "style": {
        "noNonNullAssertion": "off",
        "useImportType": "off"
      },
      "complexity": {
        "noUselessFragments": "warn",
        "noUselessLoneBlockStatements": "warn",
        "noBannedTypes": "warn"
      },
      "a11y": {
        "recommended": false
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "semicolons": "asNeeded"
    }
  },
  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  }
}
