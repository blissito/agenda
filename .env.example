# Base de datos MongoDB (requerido por Prisma)
DATABASE_URL="mongodb+srv://user:password@cluster.mongodb.net/dbname"

# Secrets (REQUIRED - generate secure random strings for production)
SESSION_SECRET="generate-a-secure-random-string"
JWT_SECRET="generate-another-secure-random-string"

# Admin emails (comma-separated)
ADMIN_EMAILS="admin@example.com"

# AWS SES for emails
SES_REGION="us-east-2"
SES_API_KEY=""
SES_SECRET_KEY=""

# OAuth - Google
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# OAuth - Microsoft/Outlook
OUTLOOK_CLIENT_ID=""
OUTLOOK_CLIENT_SECRET=""

# App URL (for magic links and OAuth redirects)
APP_URL="https://your-domain.com"

# Environment
NODE_ENV="development"
